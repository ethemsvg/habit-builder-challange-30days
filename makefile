all: clean compile run

compile: main.c
	
	@echo "\n**********************************************************************"
	@echo "\ncompiling..."
	@gcc main.c -o test -lm
	@gcc -c main.c
	@echo "\n**********************************************************************"
	
run:	
	
	@echo "\n**********************************************************************"
	@echo "\nrunning the tests..."
	@./test
	@echo "\n**********************************************************************"
	@echo "\nall tests are completed."
	
	
clean: 
	@echo "\n**********************************************************************"
	@echo "\nremoving compiled files..."
	@rm -f *.o
	@rm -f test
	@echo "\nfiles removed."
	@echo "\n**********************************************************************"
	
